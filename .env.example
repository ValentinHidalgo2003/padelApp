# =============================================================================
# PadelApp - Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Database ---
DB_NAME=padelapp
DB_USER=padeluser
DB_PASSWORD=CHANGE_ME_strong_password_here

# --- Django ---
SECRET_KEY=CHANGE_ME_generate_with_python_c_from_django_core_management_utils_import_get_random_secret_key_print_get_random_secret_key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
LOG_LEVEL=WARNING

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# --- SSL (set to False if behind a reverse proxy that handles SSL) ---
SECURE_SSL_REDIRECT=False

# --- App ---
APP_PORT=80
GUNICORN_WORKERS=3
